<Application x:Class="WpfStyleLesson1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfStyleLesson1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="commonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Aqua"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="firstStyle" BasedOn="{StaticResource commonStyle}" TargetType="Button">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="secondStyle" BasedOn="{StaticResource commonStyle}" TargetType="Button">
            <Setter Property="Background" Value="SkyBlue"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="thirdStyle" BasedOn="{StaticResource commonStyle}" TargetType="Button">
            <Setter Property="Background" Value="Tan"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <SolidColorBrush Color="LightPink" x:Key="lightPinkColor"/>
    </Application.Resources>
</Application>
